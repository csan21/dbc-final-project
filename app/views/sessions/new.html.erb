<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <% if @errors.length > 0 %>
      <div id="login-errors">
        <% @errors.each do |error| %>
          <%= error %>
        <% end %>
      </div>
      <% end %>
      <br>
      <div class="account-wall">
        <p class="sign-in">login</p>
        <form class="form-signin" action="/sessions" method="POST">
        <input type="text" name="session[email]" class="form-control" placeholder="Email" required autofocus>
        <input type="password" name="session[password]" class="form-control" placeholder="Password" required>
        <button class="btn btn-md btn-danger btn-block" type="submit"> sign in</button><br>
        <p class="message">Not on Squad?<a href="/users/new"> Sign up</a></p><span class="clearfix"></span>
        </form>
      </div>
    </div>
  </div>
</div>
